  "flow": {
    "triggers": [
      {
        "id": "zw130_scene",
        "title": {
          "en": "Scene is activated",
          "nl": "Scene is geactiveerd"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ZW130"
          },
          {
            "name": "button",
            "type": "dropdown",
            "values": [
              {
                "id": "1",
                "label": {
                  "en": "Top left",
                  "nl": "Links boven"
                }
              },
              {
                "id": "2",
                "label": {
                  "en": "Top right",
                  "nl": "Rechts boven"
                }
              },
              {
                "id": "3",
                "label": {
                  "en": "Bottom left",
                  "nl": "Links onder"
                }
              },
              {
                "id": "4",
                "label": {
                  "en": "Bottom right",
                  "nl": "Rechts onder"
                }
              }
            ]
          },
          {
            "name": "scene",
            "type": "dropdown",
            "values": [
              {
                "id": "Key Pressed 1 time",
                "label": {
                  "en": "Pressed 1x",
                  "nl": "1x gedrukt"
                }
              },
              {
                "id": "Key Held Down",
                "label": {
                  "en": "Hold press (5x a second)",
                  "nl": "Lang drukken (5x per seconde)"
                }
              },
              {
                "id": "Key Released",
                "label": {
                  "en": "Press released",
                  "nl": "Drukken losgelaten"
                }
              },
              {
                "id": "Key Slide Up",
                "label": {
                  "en": "Slide Up",
                  "nl": "Omhoog Schuiven"
                }
              },
              {
                "id": "Key Slide Down",
                "label": {
                  "en": "Slide Down",
                  "nl": "Omlaag schuiven"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "zw130_dim",
        "title": {
          "en": "Dim level was send",
          "nl": "Dim niveau verzonden"
        },
        "hint": {
          "en": "The dim level is send when you slide your finger over the wallmote. The brightness level will be the height you stopped at. (full height of the Wallmote Quad)",
          "nl": "Het dim niveau wordt verzonden bij het schuiven van de vinger over de wallmote. Het helderheidsniveau is de hoogte waar je stopt. (volle hoogte van de Wallmote Quad)"
        },
        "tokens": [
          {
            "name": "dim",
            "type": "number",
            "title": {
              "en": "level",
              "nl": "niveau"
            },
            "example": 0.5
          }
        ],
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ZW130"
          },
          {
            "name": "button",
            "type": "dropdown",
            "values": [
              {
                "id": "1",
                "label": {
                  "en": "Top left",
                  "nl": "Links boven"
                }
              },
              {
                "id": "2",
                "label": {
                  "en": "Top right",
                  "nl": "Rechts boven"
                }
              },
              {
                "id": "3",
                "label": {
                  "en": "Bottom left",
                  "nl": "Links onder"
                }
              },
              {
                "id": "4",
                "label": {
                  "en": "Bottom right",
                  "nl": "Rechts onder"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "zw130_battery_full",
        "title": {
          "en": "Battery fully charged",
          "nl": "Batterij volledig opgeladen"
        },
        "hint": {
          "en": "This card will only trigger if the Wallmote Quad has been included as secure.",
          "nl": "Deze kaart zal alleen activeren als de Wallmote Quad beveiligd is toevoegd."
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ZW130"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "ZW130",
      "name": {
        "en": "Wallmote Quad"
      },
      "class": "button",
      "capabilities": [
        "measure_battery",
        "alarm_battery"
      ],
      "images": {
        "large": "/drivers/ZW130/assets/images/large.png",
        "small": "/drivers/ZW130/assets/images/small.png"
      },
      "zwave": {
        "manufacturerId": 134,
        "productTypeId": [
          2,
          258,
          513
        ],
        "productId": [
          130
        ],
        "zwaveAllianceProductId": 2153,
        "zwaveAllianceProductDocumentation": "https://Products.Z-WaveAlliance.org/ProductManual/File?folder=&filename=Manuals/2153/Aeon Labs WallMote Quad manual.pdf",
        "learnmode": {
          "image": "/drivers/ZW130/assets/learnmode.svg",
          "instruction": {
            "en": "Secure inclusion: Double press the action button on the Wallmote Quad. Non-secure inclusion: Single press the action button on the Wallmote Quad.",
            "nl": "Beveiligd toevoegen: Druk tweemaal op de actie knop op de Wallmote Quad. Onbeveiligd toevoegen: Druk eenmaal op de actie knop op de Wallmote Quad."
          }
        },
        "unlearnmode": {
          "instruction": {
            "en": "Press the action button on the Wallmote Quad",
            "nl": "Druk op de actie knop op de Wallmote Quad"
          }
        },
        "associationGroups": [
          1
        ],
        "associationGroupsOptions": {
          "1": {
            "hint": {
              "en": "This is the Z-Wave Lifeline group, it is not recommended to change this.",
              "nl": "Dit is de Z-Wave Lifeline groep, het is niet aangeraden deze te veranderen."
            }
          },
          "2": {
            "hint": {
              "en": "Devices here will receive on and off commands from the topleft touch part.",
              "nl": "Apparaten hier zullen de aan en uit commando's krijgen van het linksbovenste aanraak gedeelte."
            }
          },
          "3": {
            "hint": {
              "en": "Devices here will receive dimming commands from the topleft touch part.",
              "nl": "Apparaten hier zullen de dimmen commando's krijgen van het linksbovenste aanraak gedeelte."
            }
          },
          "4": {
            "hint": {
              "en": "Devices here will receive on and off commands from the topright touch part.",
              "nl": "Apparaten hier zullen de aan en uit commando's krijgen van het rechtsbovenste aanraak gedeelte."
            }
          },
          "5": {
            "hint": {
              "en": "Devices here will receive dimming commands from the topright touch part.",
              "nl": "Apparaten hier zullen de dimmen commando's krijgen van het rechtsbovenste aanraak gedeelte."
            }
          },
          "6": {
            "hint": {
              "en": "Devices here will receive on and off commands from the bottomleft touch part.",
              "nl": "Apparaten hier zullen de aan en uit commando's krijgen van het linksonderste aanraak gedeelte."
            }
          },
          "7": {
            "hint": {
              "en": "Devices here will receive dimming commands from the bottomleft touch part.",
              "nl": "Apparaten hier zullen de dimmen commando's krijgen van het linksonderste aanraak gedeelte."
            }
          },
          "8": {
            "hint": {
              "en": "Devices here will receive on and off commands from the bottomright touch part.",
              "nl": "Apparaten hier zullen de aan en uit commando's krijgen van het rechtsonderste aanraak gedeelte."
            }
          },
          "9": {
            "hint": {
              "en": "Devices here will receive dimming commands from the bottomright touch part.",
              "nl": "Apparaten hier zullen de dimmen commando's krijgen van het rechtsonderste aanraak gedeelte."
            }
          }
        },
        "defaultConfiguration": [
          {
            "id": 4,
            "size": 1,
            "value": 3
          }
        ]
      },
      "settings": [
        {
          "id": "touch_sound",
          "type": "checkbox",
          "label": {
            "en": "Touch sound",
            "nl": "Aanraak geluid"
          },
          "hint": {
            "en": "This parameter (1) determines whether or not the Wallmote Quad makes a sound when touched.",
            "nl": "Deze parameter (1) bepaalt of de Wallmote Quad geluid maakt bij het aanraken."
          },
          "zwave": {
            "index": 1,
            "size": 1
          },
          "value": true
        },
        {
          "id": "touch_vibration",
          "type": "checkbox",
          "label": {
            "en": "Touch vibration",
            "nl": "Aanraak trillen"
          },
          "hint": {
            "en": "This parameter (2) determines whether or not the Wallmote Quad vibrates when touched.",
            "nl": "Deze parameter (2) bepaalt of de Wallmote Quad trilt bij het aanraken."
          },
          "zwave": {
            "index": 2,
            "size": 1
          },
          "value": true
        },
        {
          "id": "slide_function",
          "type": "checkbox",
          "label": {
            "en": "Slide dimming function",
            "nl": "Swipe dim functie"
          },
          "hint": {
            "en": "This parameter (3) determines whether or not dimming on slide is enabled.",
            "nl": "Deze parameter (3) bepaalt of dimmen met swipen geactiveerd is."

